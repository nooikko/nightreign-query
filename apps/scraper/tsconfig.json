{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@nightreign/typescript-config/base",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@scraper/*": ["src/scraper/*"],
      "@normalizer/*": ["src/normalizer/*"],
      "@embeddings/*": ["src/embeddings/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
